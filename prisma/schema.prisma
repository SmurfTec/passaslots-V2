generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model NewsLetter {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  createdAt DateTime @default(now())
}

model Signup_Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  purpose   purpose
  firstName String
  lastName  String
  phone     String?
  message   String?
  email     String
  createdAt DateTime @default(now())
  checkUpdatesReceived Boolean @default(false)
}

model PlayerRegistration {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  phone String?
  unlockMyBonusCheck Boolean @default(false)
  createdAt DateTime @default(now())
}

enum purpose {
  message
  signup
}

model blogs {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title  String @unique
  description String 
  publishedOn String?
  isDeleted Boolean
  image String
  author String
  richText String
}

model admin {
id    String @id @default(auto()) @map("_id") @db.ObjectId
email String @unique
password String
isActive Boolean
firstName String
lastName String
failedRetryAttempts Int
createdAt DateTime @default(now())
 updatedAt DateTime @updatedAt
}